{
  "name": "@restqa/rest-api",
  "version": "0.1.5",
  "private": false,
  "description": "REST API Functional Test engine based on Gerkin - RestQA",
  "scripts": {
    "preexample": "npm run build",
    "example": "cucumber-js --require ./example/setup.js --publish-quiet --fail-fast ./example/features",
    "format": "prettier --check src",
    "format:fix": "prettier --write src",
    "test": "jest",
    "test:watch": "jest --watch --coverage",
    "test:coverage": "jest --coverage",
    "lint:fix": "eslint --fix src/",
    "lint": "eslint src/",
    "build": "esbuild src/index.js --minify --bundle --external:esprima --external:jsonpath --platform=node --outfile=dist/index.js"
  },
  "dependencies": {
    "@restqa/plugin": "0.0.2",
    "ajv": "^8.0.1",
    "dot-object": "^2.1.3",
    "form-data": "^3.0.0",
    "got": "^10.6.0",
    "jsonpath": "^1.1.1",
    "moment": "^2.29.4",
    "uuid": "^3.4.0"
  },
  "main": "dist/index.js",
  "devDependencies": {
    "@cucumber/cucumber": "^7.3.1",
    "esbuild": "^0.14.38",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.2.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "jest": "^26.6.3",
    "jest-runner-eslint": "^0.10.0",
    "jest-runner-prettier": "^0.3.7",
    "prettier": "^2.4.1"
  },
  "jest": {
    "watchPlugins": [
      "jest-runner-eslint/watch-fix"
    ],
    "moduleFileExtensions": [
      "js"
    ],
    "globalSetup": "<rootDir>/jest.setup.js",
    "projects": [
      {
        "displayName": {
          "name": "test",
          "color": "yellow"
        }
      },
      {
        "runner": "jest-runner-eslint",
        "displayName": "eslint",
        "testMatch": [
          "<rootDir>/src/**/*.js"
        ]
      },
      {
        "runner": "jest-runner-prettier",
        "displayName": {
          "name": "prettier",
          "color": "blue"
        }
      }
    ]
  },
  "jest-runner-eslint": {
    "cliOptions": {
      "fix": true
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/restqa/restqapi.git"
  },
  "keywords": [
    "api",
    "rest",
    "restapi",
    "test",
    "cucumber",
    "restqa"
  ],
  "author": "Olivier Rodomond",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/restqa/restqapi/issues"
  },
  "homepage": "https://github.com/restqa/restqapi#readme"
}
